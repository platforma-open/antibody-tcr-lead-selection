    //     run()

    // Read kabat.tsv into a PFrame (columns may vary between bulk and single-cell)
   // kabatDf := wf.frame(kabatExec.getFile("kabat.tsv"), { xsvType: "tsv", inferSchema: false })

    return {
        kabat: kabat
      //  kabatPf: pframes.exportFrame(kabatDf)
    }
})


